# .env.example

# Banco
DATABASE_URL=postgres://user:pass@host:5432/dbname

# Auth/JWT
JWT_SECRET=replace-with-256-bit-secret
APP_BASE_URL=https://app.seudominio.com
DEV_FAKE=1   # 1=modo fake (sem Stripe/Mux reais). 0 ou ausente = produção

# E-mail (opcional, para magic link)
RESEND_API_KEY=re_************************
MAIL_FROM="Cursos <no-reply@seudominio.com>"

# Stripe
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Mux (playback signing)
MUX_TOKEN_ID=your-mux-token-id
MUX_TOKEN_SECRET=your-mux-token-secret
MUX_SIGNING_KEY_ID=your-mux-signing-key-id
MUX_SIGNING_KEY_PRIVATE=-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----

# quem pode acessar o Admin Lite (lista separada por vírgula)
ADMIN_EMAILS=aluno+seed@local.test,voce@seudominio.com
