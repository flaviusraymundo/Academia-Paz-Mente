{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "emitDeclarationOnly": false,
    "declaration": false,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": "src/server",
    "allowImportingTsExtensions": false,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/server/**/*.ts"],
  "exclude": ["**/*.test.ts"]
}
