{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "emitDeclarationOnly": false,
    "declaration": false,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": false,
    "outDir": "dist",
    "rootDir": "src/server",
    "typeRoots": ["./node_modules/@types"]
  },
  "include": [
    "src/server/**/*.ts",
    "src/types/**/*.d.ts"
  ],
  "exclude": ["**/*.test.ts"]
}
