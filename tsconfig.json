{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true
  },
  "include": [
    "src/**/*.ts",
    "netlify/functions/**/*.ts",
    "scripts/**/*.ts",
    "src/server/types/**/*.d.ts"
  ]
}
