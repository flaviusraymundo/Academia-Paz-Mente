{
  "name": "lms-backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --project tsconfig.dev.json src/server/index.ts",
    "build": "tsc -p tsconfig.build.json && npm run copy:server-pkg && npm run web:build",
    "start": "NODE_ENV=production node dist/server/index.js",
    "web:dev": "cd web && next dev",
    "web:build": "cd web && next build",
    "web:start": "cd web && next start",
    "gen:jwt": "ts-node --transpile-only scripts/generate_jwt.ts",
    "copy:server-pkg": "node scripts/copy-server-package.mjs"
  },
  "dependencies": {
    "@types/node": "^22.7.4",
    "@types/react": "^18.3.12",
    "@mux/mux-player": "^2.1.1",
    "@sparticuz/chromium": "^127.0.0",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "next": "14.2.4",
    "morgan": "^1.10.0",
    "puppeteer-core": "^22.10.0",
    "qrcode": "^1.5.4",
    "pg": "^8.11.3",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "typescript": "^5.6.3",
    "serverless-http": "^3.2.0",
    "styled-jsx": "^5.1.1",
    "stripe": "^16.0.0",
    "ulid": "^2.3.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.7",
    "@types/react-dom": "^18.3.1",
    "ts-node-dev": "^2.0.0"
  }
}
